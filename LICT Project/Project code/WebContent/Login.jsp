#tooter {
  background: #222831;
  padding: 60px 0 40px;
}
#tooter .section-title {
  color: rgba(255, 255, 255, 0.8);
}
#tooter .contact-info {
  margin: 0 0 60px 0;
  padding: 0;
}
#tooter .contact-info li {
  list-style: none;
  margin: 0 0 20px 0;
  position: relative;
  padding-left: 40px;
}
#tooter .contact-info li i {
  position: absolute;
  top: 5px;
  left: 0;
  font-size: 22px;
  color: rgba(255, 255, 255, 0.7);
}
#tooter .contact-info li a {
  color: rgba(255, 255, 255, 0.6);
}
#tooter .contact-form .form-group input[type="name"],
#tooter .contact-form .form-group input[type="text"],
#tooter .contact-form .form-group input[type="email"],
#tooter .contact-form .form-group textarea {
  font-size: 16px;
}
#tooter .contact-form .form-group input[type="name"]::-webkit-input-placeholder,
#tooter .contact-form .form-group input[type="text"]::-webkit-input-placeholder,
#tooter .contact-form .form-group input[type="email"]::-webkit-input-placeholder,
#tooter .contact-form .form-group textarea::-webkit-input-placeholder {
  color: rgba(255, 255, 255, 0.5);
}
#tooter .contact-form .form-group input[type="name"]:-moz-placeholder,
#tooter .contact-form .form-group input[type="text"]:-moz-placeholder,
#tooter .contact-form .form-group input[type="email"]:-moz-placeholder,
#tooter .contact-form .form-group textarea:-moz-placeholder {
  /* Firefox 18- */
  color: rgba(255, 255, 255, 0.5);
}
#tooter .contact-form .form-group input[type="name"]::-moz-placeholder,
#tooter .contact-form .form-group input[type="text"]::-moz-placeholder,
#tooter .contact-form .form-group input[type="email"]::-moz-placeholder,
#tooter .contact-form .form-group textarea::-moz-placeholder {
  /* Firefox 19+ */
  color: rgba(255, 255, 255, 0.5);
}
#tooter .contact-form .form-group input[type="name"]:-ms-input-placeholder,
#tooter .contact-form .form-group input[type="text"]:-ms-input-placeholder,
#tooter .contact-form .form-group input[type="email"]:-ms-input-placeholder,
#tooter .contact-form .form-group textarea:-ms-input-placeholder {
  color: rgba(255, 255, 255, 0.5);
}
#tooter .contact-form .form-group input {
  color: rgba(255, 255, 255, 0.5);
  background: transparent;
  border: none;
  background: rgba(0, 0, 0, 0.2);
  box-shadow: none;
}
#tooter .contact-form .form-group textarea {
  color: rgba(255, 255, 255, 0.5);
  background: transparent;
  border: none;
  background: rgba(0, 0, 0, 0.2);
  box-shadow: none;
}
#tooter #btn-submit {
  color: rgba(255, 255, 255, 0.9) !important;
  background: #4CB648 !important;
}
#tooter .copy-right {
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding-top: 50px;
  margin-top: 50px;
}
#tooter .copy-right p {
  color: rgba(255, 255, 255, 0.3);
  letter-spacing: 1px;
  font-size: 14px;
  text-transform: uppercase;
}
#tooter .copy-right p a {
  color: rgba(255, 255, 255, 0.5);
}